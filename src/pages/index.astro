---
import MainLayout from "../layouts/MainLayout.astro"
import NexusBar from "../components/NexusBar.astro"
import Icon from "../components/Icon.astro"

---

<MainLayout title="Home">
  <div class="flex-grow flex items-center justify-center p-10 flex-col gap-10">
    <div class="w-full h-[400px] max-w-[400px]">
      <Icon of="nexus" />
    </div>
      <div class="flex flex-col gap-4 bottom opacity-0">
    <h3 class="text-2xl sm:text-3xl md:text-4xl uppercase tracking-wider text-white text-center">Technical club of PES University</h3>
        <NexusBar />
      </div>
  </div>
</MainLayout>

<style is:inline>

.n-circle {
  stroke-dashoffset: 10000;
  stroke-dasharray: 10000;
  animation: n-circle-draw 13s linear forwards;
}

.exus {
  stroke-dashoffset: 1000;
  stroke-dasharray: 1000;
  animation: exus-draw 5s linear forwards;
}

.bottom {
  animation: fade-in 250ms 2.5s linear forwards;
}

@keyframes n-circle-draw {
to {
  stroke-dashoffset: 0;
} 
}

@keyframes exus-draw {
to {
  stroke-dashoffset: 0;
} 
}

@keyframes fade-in {
to {
  opacity: 1;
}
}
</style>
