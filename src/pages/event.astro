---
import MainLayout from "../layouts/MainLayout.astro"

---

<MainLayout title="Event">
  <div class="flex flex-col flex-grow items-center justify-center gap-16 p-8">
    <div class="pre-container flex flex-col gap-8 items-center">
      <h3 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-center">You think you are good enough for this event?</h3>
      <h4 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold tracking-wider">Reigster if you dare!</h4>
      <button>Go to registration</button>
    </div>
    <video controls class="hidden">
      <source src="/video.webm" type="video/webm">
      <source src="/video.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>
</MainLayout>

<style>
button {
  background: white;
  padding: 10px 20px;
  color: black;
  border-radius: 10px;
}
</style>

<script>
document.addEventListener('astro:page-load', () => {
  const button = document.querySelector('button');
  const pre_container = document.querySelector('.pre-container')
  if (!pre_container) return;
  if (!button) return;

  button.addEventListener('click', () => {
    pre_container.classList.add('hidden');
    const video = document.querySelector('video');
    if (!video) return;

    video.classList.remove('hidden');
    video.muted = false;
    video.play();
  })
})
</script>
