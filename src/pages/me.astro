---
import MainLayout from "../layouts/MainLayout.astro"
import SocialBar from "../components/SocialBar.astro"

---

<MainLayout title="Me">
  <div class="w-full flex items-center justify-center p-16 flex-grow">
    <div class="w-full h-[350px] max-w-[500px] aspect-square flex flex-col gap-16">
      <svg
        width="100%"
        height="100%"
        viewBox="0 0 48 31"
        fill="none"
        stroke="currentColor"
        stroke-dasharray={1000}
        stroke-dashoffset={1000}
        stroke-width={0.5}
        xmlns="http://www.w3.org/2000/svg"
        class="signature"
      >
        <path d="M1 30.0003C13.5 19.5003 7.5 -1.99995 2.49993 1.50002C-1.93084 4.60147 27.5 27.5 22.5 29.5001C13.4862 33.1057 21.92 -0.581456 26.5 1.50002C32 3.99962 31.5033 7.99962 23.5033 4.49962C21.5033 3.62462 38.5 31 32.5 30.0003C20.7798 28.0477 51 4.49962 43 1.50002C35.8383 -1.18525 49 30.0003 47.5 30.0003L44 28.5" />
      </svg>
      <div class="flex flex-col gap-4 bottom opacity-0">
        <h3 class="text-center text-4xl font-bold">Nishant Holla</h3>
        <SocialBar />
      </div>
    </div>
  </div>
</MainLayout>

<style>

.signature {
  animation: draw 18s ease-out forwards;
}

.bottom {
  animation: fade-in 250ms 2.5s linear forwards;
}

@keyframes draw {
to {
  stroke-dashoffset: 0;
}
}

@keyframes fade-in {
to {
  opacity: 1;
}
}
</style>
